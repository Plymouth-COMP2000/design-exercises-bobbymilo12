<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Selected date:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="276dp"
        android:text="â† Back"
        app:layout_constraintStart_toStartOf="@id/tvSelectedDate"
        tools:layout_editor_absoluteY="-1dp" />

    <Button
        android:id="@+id/btnTime1"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="17:00"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvSelectedDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnTime2"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="17:30"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnTime1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnTime3"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="18:00"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnTime2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnTime4"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="18:30"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnTime3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
